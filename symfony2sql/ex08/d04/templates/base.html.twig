<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="{{ label }}">{{ label }} - {{ message }}</div>
            {% endfor %}
        {% endfor %}

        <a href="{{ path('person_createTable') }}">
            <button>Create Table Persons</button>
        </a>

        <a href="{{ path('person_updateTable') }}">
            <button>Update Table Persons</button>
        </a>

        <a href="{{ path('bank_account_createTable') }}">
            <button>Create Table BankAccount</button>
        </a>

        <a href="{{ path('address_createTable') }}">
            <button>Create Table Address</button>
        </a>

        {% block body %}{% endblock %}
    </body>
</html>
